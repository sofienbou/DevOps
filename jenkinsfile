pipeline {
    agent any

    stages {
        stage('Hello World') {
            steps {
                script {
                    echo 'Hello, World!'
                }
            }
        }

        stage('Git Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/sofienbou/DevOps'
             
            }
        }
   stage('Nettoyage') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compilation') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Analyse SonarQube') {
            steps {
             withSonarQubeEnv(' http://192.168.56.10:9000') {
                    sh 'mvn admin:sonar'
                
            }
        }
    }
    
    post {
        success {
            echo 'Le pipeline a réussi. Les étapes de nettoyage, de compilation et d\'analyse SonarQube sont terminées avec succès.'
        }
        failure {
            echo 'Le pipeline a échoué. Veuillez vérifier les étapes précédentes pour plus de détails.'
        }
    }
}
